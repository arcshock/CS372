%!

% operator box: xcoord ycoord box -
% Creates one inch box at xcoord, ycoord
/box {
	newpath
	moveto
	72 0 rlineto
	0 72 rlineto
	-72 0 rlineto
	closepath
} def

% operate boxLine: xcoord ycoord box -
% Creates line of three boxes definded by operator box
/boxLine {
gsave
	translate
	0 0 box stroke

	72 0 translate
	0 0 box stroke

	72 0 translate
	0 0 box stroke
grestore
} def

% operator boxGrid: - boxGrid -
% Creates a 3x3 gird by calling operator boxLine 3 times.
/boxGrid {
72 72 boxLine

72 144 boxLine

72 216 boxLine
} def

boxGrid

showpage
